<div class="pull-right">
  <%= link_to('New Book', new_account_book_path, class: "btn btn-default") %>
</div>
<br><br>
<table class="table table-hover table-boldered text-center">
  <tbody>
    <% @books.each do |book| %>
      <tr>

        <td rowspan="4">
          <%= link_to account_book_path(book) do %>
            <% if book.image.present? %>
              <%= image_tag(book.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>

        <th>Image & Title</th>
        <td>
          <%= render_book_status(book) %>
          <%= link_to(book.title, account_book_path(book)) %>
        </td>
      </tr>
      <tr>
        <th>Update Time</th>
        <td><%= book.created_at.to_s(:short) %></td>
      </tr>
      <tr>
        <th>Owner</th>
        <td><%= book.user.email %></td>
      </tr>
      <tr>
        <th>Option</th>
        <td>
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to("Edit", edit_account_book_path(book), class: "btn btn-primary") %>
            <%= link_to("Delete", account_book_path(book), method: :delete, :date => { :confirm => "Are you sure?"}, class: "btn btn-danger") %>

            <% if book.is_hidden %>
              <%= link_to("公开", publish_account_book_path(book), method: :post, class: "btn btn-success") %>
            <% else %>
              <%= link_to("隐藏", hide_account_book_path(book), method: :post, class: "btn btn-info") %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
