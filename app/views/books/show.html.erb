<div class="row">
  <div class="col-md-6">
    <% if @book.image.present? %>
      <%= image_tag(@book.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>
      <%= @book.title %>
      <%= render_book_status(@book) %>

    </h3>
    <h4><%= @book.author %></h4>
    <div style="height:100px;">
      <p>
        <%= simple_format(@book.description) %>
      </p>
    </div>
    <p>
      <%= @book.publisher %>
    </p>
    <p>
      <%= @book.price %>
    </p>
  </div>
</div>
<% if current_user && current_user == @book.user %>
  <% if @book.is_hidden %>
    <%= link_to("设为公开", publish_account_book_path(@book), method: :post, class: "btn btn-success") %>
  <% else %>
    <%= link_to("设为隐藏", hide_account_book_path(@book), method: :post, class: "btn btn-info") %>
  <% end %>
<% end %>
