<div class="pull-right">
  <%= link_to(t('New Book'), new_account_book_path, class: "btn btn-warning") %>
</div>
<br><br>
<table class="table table-boldered table-hover text-center">
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td rowspan="4">
          <div class="col-xs-6 col-md-3">
            <%= link_to book_path(book) do %>
              <% if book.image.present? %>
                <%= image_tag(book.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </div>
        </td>
        <th><%= t("title") %></th>
        <td><%= link_to(t("book.title", :name => book.title), book_path(book)) %></td>
      </tr>
      <tr>
        <th><%= t("Owner") %></th>
        <td><%= book.user.email %></td>
      </tr>
      <tr>
        <th><%= t("publisher") %></th>
        <td><%= render_book_publisher(book) %></td>
      </tr>
      <tr>
        <th><%= t("Update") %></th>
        <td><%= book.updated_at.to_s(:short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
