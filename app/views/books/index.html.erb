<div class="pull-right">
  <%= link_to('New Book', new_account_book_path, class: "btn btn-default") %>
</div>
<br><br>
<table class="table table-boldered table-hover text-center">
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td rowspan="3">
          <div class="col-xs-6 col-md-3">
            <%= link_to book_path(book) do %>
              <% if book.image.present? %>
                <%= image_tag(book.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </div>
        </td>
        <th>Title</th>
        <td><%= link_to(book.title, book_path(book)) %></td>
      </tr>
      <tr>
        <th>User Email</th>
        <td><%= book.user.email %></td>
      </tr>
      <tr>
        <th>Update Time</th>
        <td><%= book.updated_at %></td>
      </tr>
      <tr>
        <% if current_user && current_user == book.user %>
          <td colspan="4">
            <%= link_to("Edit", edit_account_book_path(book), class: "btn btn-primary") %>
            <%= link_to("Delete", account_book_path(book), method: :delete, :date => { :confirm => "Are you sure?"}, class: "btn btn-default") %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
